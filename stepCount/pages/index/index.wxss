/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.map{
  width:100vw;
  height:100vh;
}

.searchBackFill{
  background-color: white;
}

.backFillText{
  position:fixed;
  background-color: white;
}


.floorRadio{
  position:fixed;
  bottom:0;
  display:flex;
  width:100%;
  justify-content:left;

}

.admin {
  position:fixed;
  display:flex;
  width:40px;
  height: 40px;
  left: 10%;
  top:5px;
}



.admin image {
  position:relative;
  display:flex;
  width:40px;
  height:40px;
}


.navigation{
  position:fixed;
  display:flex;
  width:40px;
  height: 40px;
  right: 10%;
  background: white;
  top:5px;
}

.navigation image {
  position:relative;
  display:flex;
  width:40px;
  height:40px;
}

.searchViewContainer{
  display: flex;
  position:fixed;
  left: 10%;

  border: 1px solid honeydew;
  border-radius: 10rpx;
  background-color:white;

  height: 40px;
  top:5px;
  width: 80%;
}

.searchView{
  display: flex;
  left: 10%;

  border: 1px solid honeydew;
  border-radius: 10rpx;
  background-color:white;

  height: 40px;
  top:2px;
  width: 100%;
}

.searchBar{
  display: flex;
  position:relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  left: 20%;
}

.backFillContainer{

  display: flex;
  position:relative;
  top:45px;
  width: 80%;
  background-color: white;
  left: 10%;
}


.view_hide{
   display: none;
}